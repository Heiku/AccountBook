<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background">


    <!--第一行，个人信息行，存放用户头像，用户名-->
    <LinearLayout
        android:id="@+id/my_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/oringe">

            <com.example.ljh.accountbook.UI.CircleImageView
                android:id="@+id/info_imageview"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/headportrait" />

            <TextView
                android:id="@+id/info_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="username"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_toRightOf="@id/info_imageview" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_right"
                android:gravity="center" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_setting"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/setting_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ico_setting"
                android:gravity="center"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/setting_text"
                android:text="系统设置"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/setting_image"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_changePassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/change_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_refresh"
                android:gravity="center"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/setting_change"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/change_imageview"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_about"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/about_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ico_about"
                android:gravity="center"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/about_text"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/about_imageview"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/arrow_right"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>