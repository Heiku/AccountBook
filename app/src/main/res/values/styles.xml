<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/oringe</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="lable_style">
        <item name="android:background">#33ffffff</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>


    <style name="et_password_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">密码</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawableRight">@mipmap/password_hide</item>
        <item name="android:drawableEnd">@mipmap/password_hide</item>
    </style>

    <style name="btn_normal_style">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">40.0dip</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
</resources>
